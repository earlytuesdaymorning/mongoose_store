<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
</head>
<body>
    <div class="full-page">
        <header>
        <%- include("./partials/header.ejs") %>
        </header>
        <h1>All Products</h1>
        <div class="all-items">
            <% items.forEach(item => { %>
                <div class="item">
                    <img src=<%= item.img %>>
                    <a href="store/<%=item._id; %>"> <%=item.name; %> | $<%=item.price; %></a>
                </div>
            <% }) %>
        </div>
        
    </div>
</body>
</html>